@import 'colors.pcss';

button {
  cursor: pointer;
}

h1 {
  background-color: var(--red);
}

#show-btn {
  background-color: var(--main);
  border: 1px solid black;
  padding: 5px;
  color: white;
}

#show-p {
  font-size: responsive;
}


.example {
  display: grid;
  transition: all .5s;
  user-select: none;
  background: linear-gradient(to bottom, white, black);
}
